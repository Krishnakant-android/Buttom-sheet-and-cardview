<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="40dp"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/bottomSheetHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_expand_me"
            android:padding="10dp"
            android:background="@drawable/rounded_corner"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            style="@style/ShadowBlackTextWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card2_bg"
            android:padding="10dp"
            android:text="Menu 1"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            style="@style/ShadowBlackTextWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card3_bg"
            android:padding="10dp"
            android:text="Menu 2"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            style="@style/ShadowBlackTextWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card4_bg"
            android:padding="10dp"
            android:text="Menu 3"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            style="@style/ShadowBlackTextWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card5_bg"
            android:padding="10dp"
            android:text="Menu 4"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>